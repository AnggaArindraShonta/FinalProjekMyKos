<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <include
        android:id="@+id/pic"
        layout="@layout/detail_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_back" />

    <ImageView
        android:id="@+id/btnwish"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_wishlist" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:background="@drawable/bgrounded"/>

        <TextView
            android:id="@+id/kure"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuretakeso Hott"/>
        <TextView
            android:id="@+id/price"
            android:layout_below="@+id/kure"
            android:fontFamily="@font/poppinslight"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/harga"/>
        <!--       <RatingBar-->
        <!--           android:layout_width="wrap_content"-->
        <!--           android:layout_height="wrap_content"-->
        <!--           android:numStars="5"-->
        <!--           android:layout_marginTop="30dp"-->
        <!--           android:layout_alignParentEnd="true"-->
        <!--           android:clickable="false"/>-->
        <TextView
            android:id="@+id/main"
            android:layout_below="@+id/price"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Main Facilities"/>

        <LinearLayout
            android:id="@+id/linearpic"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/icon_kitchen"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/icon_bedroom"/>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/icon_cupboard"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilities"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linearpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinslight"
                android:layout_marginRight="65dp"
                android:text="2 kitchen"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinslight"
                android:layout_marginRight="50dp"
                android:text="3 bedroom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinslight"
                android:text="3 Big Lemari"/>
        </LinearLayout>

        <TextView
            android:id="@+id/photo"
            android:layout_below="@+id/facilities"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos"/>

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/photo">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20sp"
                    android:src="@drawable/photo1" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20sp"
                    android:src="@drawable/photo2" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20sp"
                    android:src="@drawable/photo3" />

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="20sp"
                    android:src="@drawable/photo1" />


            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/location"
            android:layout_below="@+id/horizontalScrollView"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/black"
            android:layout_marginStart="18dp"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"/>

        <TextView
            android:layout_below="@id/location"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp"
            android:text="Jln. Kappan Sukses No. 20\nPalembang"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btnmap"
            android:layout_below="@id/location"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_map"/>

        <Button
            android:layout_below="@id/btnmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="BOOK NOW"
            android:background="@drawable/btn_rounded"/>

    </RelativeLayout>


</RelativeLayout>